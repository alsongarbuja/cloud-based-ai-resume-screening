# =============================================================================
# AUTHENTICATION
# =============================================================================

# NextAuth.js Secret (generate with: openssl rand -base64 32)
AUTH_SECRET=""

# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# GitHub OAuth Credentials
# Get these from: https://github.com/settings/developers
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""

# Base URL for NextAuth
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# FIREBASE CLIENT SDK (Required)
# Get these from Firebase Console > Project Settings > General
# =============================================================================

NEXT_PUBLIC_FIREBASE_API_KEY=""
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=""
NEXT_PUBLIC_FIREBASE_PROJECT_ID=""
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=""
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=""
NEXT_PUBLIC_FIREBASE_APP_ID=""

# =============================================================================
# FIREBASE ADMIN SDK (Optional - for server-side operations)
# Get these from Firebase Console > Project Settings > Service Accounts
# Click "Generate new private key" and copy values from the JSON file
# =============================================================================

FIREBASE_ADMIN_PROJECT_ID=""
FIREBASE_ADMIN_CLIENT_EMAIL=""
FIREBASE_ADMIN_PRIVATE_KEY=""

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application URL (used for redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Firebase Emulator (Optional - for local development)
# Uncomment to use Firebase emulators instead of production Firebase
# NEXT_PUBLIC_USE_FIREBASE_EMULATOR="true"
